{
  "expo": {
    "name": "Nverse",
    "slug": "ebookd",
    "version": "1.4",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff",
      "imageWidth": 200
    },
    "ios": {
      "googleServicesFile": "./GoogleService-Info.plist",
      "bundleIdentifier": "com.amir19225.ebookdv1",
      "useFrameworks": "static",
      "useAppleSignIn": true,
      "supportsTablet": true,
      "requireFullScreen": true
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "supportsTablet": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff",
        "splash": {
          "image": "./assets/images/splash-icon.png",
          "resizeMode": "cover",
          "backgroundColor": "#ffffff"
        }
      },
      "package": "com.amir19225.ebookdv1",
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "PORTRAIT"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#ffffff",
          "image": "./assets/images/splash-icon.png",
          "resizeMode": "cover",
          "imageWidth": 200
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Niverse requests access to your Photo Library to allow you to upload a profile picture, which will be used to personalise your account."
        }
      ],
      "expo-apple-authentication",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "1fad877f-425e-4f91-829f-cc787928f8c1"
      }
    },
    "owner": "amir19225",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/1fad877f-425e-4f91-829f-cc787928f8c1"
    },
    "submit": {
      "production": {
        "android": {
          "serviceAccountKeyPath": "./service-account-file.json",
          "track": "internal"
        }
      }
    }
  }
}
